{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "Register": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "KeySchema": [
          {
            "AttributeName": "num_doc",
            "KeyType": "HASH"
          }
        ],
        "AttributeDefinitions": [
          {
            "AttributeName": "num_doc",
            "AttributeType": "S"
          }
        ],
        "GlobalSecondaryIndexes": [],
        "BillingMode": "PROVISIONED",
        "TableName": "Register",
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        }
      }
    },
    "TableRegisterReadCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "DependsOn": "Register",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Register",
        "ScalableDimension": "dynamodb:table:ReadCapacityUnits",
        "MinCapacity": 1,
        "MaxCapacity": 10,
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/dynamodb.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_DynamoDBTable"
        }
      }
    },
    "TableRegisterReadCapacityScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "DependsOn": "TableRegisterReadCapacityScalableTarget",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Register",
        "ScalableDimension": "dynamodb:table:ReadCapacityUnits",
        "PolicyName": "Register-read-capacity-scaling-policy",
        "PolicyType": "TargetTrackingScaling",
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBReadCapacityUtilization"
          },
          "ScaleOutCooldown": 60,
          "ScaleInCooldown": 60,
          "TargetValue": 70
        }
      }
    },
    "TableRegisterWriteCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "DependsOn": "Register",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Register",
        "ScalableDimension": "dynamodb:table:WriteCapacityUnits",
        "MinCapacity": 1,
        "MaxCapacity": 10,
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/dynamodb.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_DynamoDBTable"
        }
      }
    },
    "TableRegisterWriteCapacityScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "DependsOn": "TableRegisterWriteCapacityScalableTarget",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Register",
        "ScalableDimension": "dynamodb:table:WriteCapacityUnits",
        "PolicyName": "Register-write-capacity-scaling-policy",
        "PolicyType": "TargetTrackingScaling",
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBWriteCapacityUtilization"
          },
          "ScaleOutCooldown": 60,
          "ScaleInCooldown": 60,
          "TargetValue": 70
        }
      }
    }
  }
}